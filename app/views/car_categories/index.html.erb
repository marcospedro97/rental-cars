<div class="columns is-centered">
  <div class="column is-half">
    <h1>Categorias de Carro</h1>
      <% if @car_categories.empty? %>
        <h3>Nenhuma categoria de carro registrada</h3>
      <% else %>
      <% @car_categories.each do |category| %>
        <%= link_to category.name, category %>
      <% end %>
    <% end %>
    <%= link_to 'Registrar nova categoria', new_car_category_path %>
  </div>
</div>
