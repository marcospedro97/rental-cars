<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <%= form_for car_model do |f| %>
          <div class="field">
            <div class="control">
              <%= f.label :name, 'Nome' %><br />
              <%= f.text_field :name, class:"input is-primary" %><br />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :year, 'Ano' %><br />
              <%= f.text_field :year, class:"input is-primary" %><br />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :motorization, 'Motorização' %><br />
              <%= f.text_field :motorization, class:"input is-primary" %><br />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :fuel_type, 'Tipo de Combustível' %><br />
              <%= f.text_field :fuel_type, class:"input is-primary" %><br />
            </div>
          </div>
          <div class="field">
              <%= f.label :manufacturer_id, 'Fabricante' %><br />
            <div class="select is-medium">
              <%= f.collection_select(:manufacturer_id, @manufacturers, :id, :name) %><br />
            </div>
          </div>
          <div class="field">
            <%= f.label :car_category_id, 'Categoria'%><br />
              <div class="select is-medium">
                <%= f.collection_select(:car_category_id, @car_categories, :id, :name) %><br />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.submit 'Enviar', class:"button is-info is-medium" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>